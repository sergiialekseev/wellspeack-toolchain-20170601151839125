<div ng-if="ctrl.speechDefined" class="speech-module"><div ui-view="header"></div><main><div class="btn-group"><div ng-bind="ctrl.text.source.random" ng-click="ctrl.sourceType(&quot;random&quot;)" ng-class="{&quot;btn-default&quot;: !ctrl.isActiveSource(&quot;random&quot;), &quot;btn-brand&quot;: ctrl.isActiveSource(&quot;random&quot;)}" class="btn btn-xs"></div><div ng-bind="ctrl.text.source.custom" ng-click="ctrl.sourceType(&quot;custom&quot;)" ng-class="{&quot;btn-default&quot;: !ctrl.isActiveSource(&quot;custom&quot;), &quot;btn-brand&quot;: ctrl.isActiveSource(&quot;custom&quot;)}" class="btn btn-xs"></div></div><div class="page-wrapper"><div class="left-page"><div ui-view="source" class="flex flex-column"></div></div><div class="right-page"><div ng-if="!ctrl.hasResults" class="flex flex-column result-placeholder"><div ng-if="!ctrl.recognizing &amp;&amp; !ctrl.loadingResults" class="lead text-muted"><p><span ng-bind="ctrl.text.recognizing.clickHere"></span><i ng-click="ctrl.startButton($event)" ng-disabled="!ctrl.userSource" class="icon-mic small"></i><span ng-bind="ctrl.text.recognizing.turnOn"></span></p></div><div ng-if="ctrl.recognizing"><i class="icon-mic"></i><p ng-bind="ctrl.text.recognizing.speakNow" class="lead text-muted"></p></div><div ng-if="!ctrl.recognizing &amp;&amp; ctrl.loadingResults"><div class="loader"></div><div ng-bind="ctrl.text.recognizing.wait"></div></div></div><div ng-if="ctrl.hasResults" class="flex flex-column"><div class="settings-block"><h6 ng-bind="ctrl.text.recognizing.pronounciation"></h6><p ng-bind="ctrl.userResult"></p></div><div class="result-block"><diff-match-patch source-obj="ctrl.userSource" result-obj="ctrl.userResult" diffs-obj="ctrl.userResultDiffs"></diff-match-patch><div class="statistics"><div class="percentage"><span ng-bind="ctrl.userResultDiffs.percentage"></span>%<i ng-if="ctrl.isHappy()" class="icon-emo-grin"></i><i ng-if="ctrl.isIndifferent()" class="icon-emo-displeased"></i><i ng-if="ctrl.isSad()" class="ico